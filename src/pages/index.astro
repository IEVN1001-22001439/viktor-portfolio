---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import FacebookIcon from "../components/icons/FacebookIcon.astro";
import InstagramIcon from "../components/icons/InstagramIcon.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import SectionContainerMain from "../components/SectionContainerMain.astro";
import GlassCardProject from "../components/GlassCardProject.astro";
import Footer from "../components/Footer.astro";
import { translations } from "../i18n/translations";

// Obtener el idioma actual desde los parámetros de URL
const url = new URL(Astro.request.url);
const langParam = url.searchParams.get("lang");
const lang = (langParam as keyof typeof translations) || "es";
const t = translations[lang];
---

<Layout title="Viktor">
    <main>
        <!-- Sección About/Hero -->
        <SectionContainerMain id="about">
            <div
                class="flex flex-col sm:flex-row gap-x-4 gap-y-4 items-center mt-10 sm:mt-20"
            >
                <img
                    class="rounded-full size-20 sm:size-13 mb-4 sm:mb-0"
                    src="/public/media/img/VictorHugoAmador.jpg"
                    alt="Victor Hugo Amador desarrollador web y artista 3D"
                />
                <div class="text-center sm:text-left">
                    <h1
                        class="text-blue-900 opacity-70 text-2xl sm:text-4xl lg:text-5xl font-bold flex flex-col sm:flex-row gap-x-4 gap-y-2 pb-4 items-center"
                    >
                        {t.hero.title}
                        <a
                            href="https://www.linkedin.com/in/victor-hugo-amador-enriquez-527695318/"
                            target="_blank"
                            rel="noopener"
                            class="flex justify-center items-center"
                        >
                            <Badge>{t.hero.available}</Badge>
                        </a>
                    </h1>
                </div>
            </div>

            <h2 class="text-xl opacity-70 text-center sm:text-left mt-4">
                {t.hero.subtitle}
            </h2>

            <p class="text-lg opacity-70 mt-4 text-center sm:text-left">
                {t.hero.description}
            </p>

            <!-- Redes Sociales Responsive -->
            <nav
                class="flex flex-wrap gap-2 mt-5 justify-center sm:justify-start"
            >
                <SocialPill
                    href="https://www.linkedin.com/in/victor-hugo-amador-enriquez-527695318/"
                >
                    <LinkedInIcon class="size-5 sm:size-6" />
                    <span class="hidden sm:inline">LinkedIn</span>
                    <span class="sm:hidden">In</span>
                </SocialPill>
                <SocialPill href="https://github.com/vSk8erB0i">
                    <GitHubIcon class="size-5 sm:size-6" />
                    <span class="hidden sm:inline">GitHub</span>
                    <span class="sm:hidden">Git</span>
                </SocialPill>
                <SocialPill href="https://www.facebook.com/viktor.fbx/">
                    <FacebookIcon class="size-5 sm:size-6" />
                    <span class="hidden sm:inline">Facebook</span>
                    <span class="sm:hidden">FB</span>
                </SocialPill>
                <SocialPill href="https://www.instagram.com/viktor.fbx/">
                    <InstagramIcon class="size-5 sm:size-6" />
                    <span class="hidden sm:inline">Instagram</span>
                    <span class="sm:hidden">IG</span>
                </SocialPill>
                <SocialPill href="mailto:vhamadore@gmail.com">
                    <EmailIcon class="size-5 sm:size-6" />
                    <span class="hidden sm:inline">vhamadore@gmail.com</span>
                    <span class="sm:hidden">Email</span>
                </SocialPill>
            </nav>
        </SectionContainerMain>

        <!-- Sección Skills -->
        <SectionContainerMain id="skills">
            <h1
                class="text-blue-900 opacity-70 text-3xl sm:text-4xl lg:text-5xl font-bold text-center mt-10 sm:mt-20 mb-8 sm:mb-12"
            >
                {t.skills.title}
            </h1>

            <!-- Cambia este div contenedor -->
            <div
                class="w-full px-4 sm:px-0 mt-8 sm:mt-16 grid grid-cols-1 gap-4 sm:gap-6 lg:gap-8"
            >
                <!-- Programación -->
                <div
                    class="bg-white/10 backdrop-blur-md border-white border-1 inset-shadow-sm shadow-md rounded-2xl p-4 sm:p-6 hover:scale-[1.02] transition-all duration-500 hover:bg-white/20 hover:shadow-sm hover:inset-shadow-md mx-auto w-full max-w-2xl"
                >
                    <h3
                        class="text-black/70 font-medium text-base sm:text-lg md:text-xl mb-4 sm:mb-6 text-center"
                    >
                        {t.skills.categories.programming}
                    </h3>
                    <div class="flex flex-wrap gap-2 sm:gap-3 justify-center">
                        {
                            t.skills.items.programming.map((skill: string) => (
                                <span class="rounded-full text-black/70 border border-white bg-white/10 backdrop-blur-md flex justify-center items-center gap-x-2 py-1 px-3 sm:py-2 sm:px-4 shadow-md inset-shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-sm hover:bg-white/20 hover:inset-shadow-md cursor-default text-xs sm:text-sm font-medium">
                                    {skill}
                                </span>
                            ))
                        }
                    </div>
                </div>

                <!-- Frameworks -->
                <div
                    class="bg-white/10 backdrop-blur-md border-white border-1 inset-shadow-sm shadow-md rounded-2xl p-4 sm:p-6 hover:scale-[1.02] transition-all duration-500 hover:bg-white/20 hover:shadow-sm hover:inset-shadow-md mx-auto w-full max-w-2xl"
                >
                    <h3
                        class="text-black/70 font-medium text-base sm:text-lg md:text-xl mb-4 sm:mb-6 text-center"
                    >
                        {t.skills.categories.frameworks}
                    </h3>
                    <div class="flex flex-wrap gap-2 sm:gap-3 justify-center">
                        {
                            t.skills.items.frameworks.map((skill: string) => (
                                <span class="rounded-full text-black/70 border border-white bg-white/10 backdrop-blur-md flex justify-center items-center gap-x-2 py-1 px-3 sm:py-2 sm:px-4 shadow-md inset-shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-sm hover:bg-white/20 hover:inset-shadow-md cursor-default text-xs sm:text-sm font-medium">
                                    {skill}
                                </span>
                            ))
                        }
                    </div>
                </div>

                <!-- Tools -->
                <div
                    class="bg-white/10 backdrop-blur-md border-white border-1 inset-shadow-sm shadow-md rounded-2xl p-4 sm:p-6 hover:scale-[1.02] transition-all duration-500 hover:bg-white/20 hover:shadow-sm hover:inset-shadow-md mx-auto w-full max-w-2xl"
                >
                    <h3
                        class="text-black/70 font-medium text-base sm:text-lg md:text-xl mb-4 sm:mb-6 text-center"
                    >
                        {t.skills.categories.tools}
                    </h3>
                    <div class="flex flex-wrap gap-2 sm:gap-3 justify-center">
                        {
                            t.skills.items.tools.map((skill: string) => (
                                <span class="rounded-full text-black/70 border border-white bg-white/10 backdrop-blur-md flex justify-center items-center gap-x-2 py-1 px-3 sm:py-2 sm:px-4 shadow-md inset-shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-sm hover:bg-white/20 hover:inset-shadow-md cursor-default text-xs sm:text-sm font-medium">
                                    {skill}
                                </span>
                            ))
                        }
                    </div>
                </div>

                <!-- Idiomas -->
                <div
                    class="bg-white/10 backdrop-blur-md border-white border-1 inset-shadow-sm shadow-md rounded-2xl p-4 sm:p-6 hover:scale-[1.02] transition-all duration-500 hover:bg-white/20 hover:shadow-sm hover:inset-shadow-md mx-auto w-full max-w-2xl"
                >
                    <h3
                        class="text-black/70 font-medium text-base sm:text-lg md:text-xl mb-4 sm:mb-6 text-center"
                    >
                        {t.skills.categories.languages}
                    </h3>
                    <div class="flex flex-wrap gap-2 sm:gap-3 justify-center">
                        {
                            t.skills.items.languages.map((skill: string) => (
                                <span class="rounded-full text-black/70 border border-white bg-white/10 backdrop-blur-md flex justify-center items-center gap-x-2 py-1 px-3 sm:py-2 sm:px-4 shadow-md inset-shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-sm hover:bg-white/20 hover:inset-shadow-md cursor-default text-xs sm:text-sm font-medium">
                                    {skill}
                                </span>
                            ))
                        }
                    </div>
                </div>
            </div>
        </SectionContainerMain>

        <!-- Sección Projects -->
        <SectionContainerMain id="projects">
            <h1
                class="text-blue-900 opacity-70 text-3xl sm:text-4xl lg:text-5xl font-bold text-center mt-10 sm:mt-20 mb-8 sm:mb-12"
            >
                {t.projects.title}
            </h1>

            <!-- Cambia este div contenedor -->
            <div
                class="w-full px-4 sm:px-0 mt-8 sm:mt-16 grid grid-cols-1 gap-4 lg:grid-cols-2"
            >
                <!-- Proyecto 1 - Modelado 3D -->
                <GlassCardProject
                    title={lang === "es"
                        ? "Modelado 3D"
                        : lang === "en"
                          ? "3D Modeling"
                          : "Modélisation 3D"}
                    description={lang === "es"
                        ? "Creación de assets y escenarios 3D para proyectos de visualización y entretenimiento."
                        : lang === "en"
                          ? "Creation of 3D assets and scenes for visualization and entertainment projects."
                          : "Création d'assets et de scènes 3D pour des projets de visualisation et de divertissement."}
                    imageUrl="/images/mockups/erp_system.webp"
                    tags={["Blender"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="left"
                    imageRotation="slight-right"
                    imageScale="small"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- Proyecto 2 - Portafolio Web -->
                <GlassCardProject
                    title={lang === "es"
                        ? "Portafolio Web"
                        : lang === "en"
                          ? "Web Portfolio"
                          : "Portfolio Web"}
                    description={lang === "es"
                        ? "Diseño y desarrollo de portafolios web responsivos con tecnologías modernas."
                        : lang === "en"
                          ? "Design and development of responsive web portfolios with modern technologies."
                          : "Conception et développement de portfolios web responsives avec des technologies modernes."}
                    imageUrl="/media/img/projects/portfolio.png"
                    tags={["Astro", "Tailwind", "TypeScript"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="center"
                    imageRotation="moderate"
                    imageScale="small"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- PROYECTO 3 - folklore -->
                <GlassCardProject
                    title={lang === "es"
                        ? "API REST"
                        : lang === "en"
                          ? "REST API"
                          : "API REST"}
                    description={lang === "es"
                        ? "Desarrollo de API RESTful con autenticación JWT, documentación Swagger y testing automatizado."
                        : lang === "en"
                          ? "RESTful API development with JWT authentication, Swagger documentation and automated testing."
                          : "Développement d'API RESTful avec authentification JWT, documentation Swagger et tests automatisés."}
                    imageUrl="/media/img/projects/folklore.png"
                    tags={["Python", "FastAPI", "JWT", "Docker"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="left"
                    imageRotation="none"
                    imageScale="medium"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- Proyecto 3 - Sistema ERP -->
                <GlassCardProject
                    title={lang === "es"
                        ? "Sistema ERP"
                        : lang === "en"
                          ? "ERP System"
                          : "Système ERP"}
                    description={lang === "es"
                        ? "Sistema de gestión empresarial completo con módulos de inventario, facturación y reportes."
                        : lang === "en"
                          ? "Complete business management system with inventory, billing and reporting modules."
                          : "Système de gestion d'entreprise complet avec modules d'inventaire, de facturation et de reporting."}
                    imageUrl="/media/img/projects/grupoinndex.png"
                    tags={["HTML", "CSS", "JavaScript"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="right"
                    imageRotation="slight-left"
                    imageScale="medium"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- Proyecto 4 - Aplicación Móvil -->
                <GlassCardProject
                    title={lang === "es"
                        ? "App Móvil"
                        : lang === "en"
                          ? "Mobile App"
                          : "Application Mobile"}
                    description={lang === "es"
                        ? "Desarrollo de aplicación móvil nativa con React Native para iOS y Android."
                        : lang === "en"
                          ? "Native mobile app development with React Native for iOS and Android."
                          : "Développement d'applications mobiles natives avec React Native pour iOS et Android."}
                    imageUrl="/media/img/projects/pcclock.png"
                    tags={["React Native", "JavaScript", "Firebase"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="left"
                    imageRotation="slight-left"
                    imageScale="medium"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- PROYECTO 5 - E-commerce -->
                <GlassCardProject
                    title={lang === "es"
                        ? "Tienda Online"
                        : lang === "en"
                          ? "E-commerce Store"
                          : "Boutique en Ligne"}
                    description={lang === "es"
                        ? "Plataforma de e-commerce con carrito de compras, pasarelas de pago y panel administrativo."
                        : lang === "en"
                          ? "E-commerce platform with shopping cart, payment gateways and admin panel."
                          : "Plateforme e-commerce avec panier, passerelles de paiement et panneau d'administration."}
                    imageUrl="/media/img/projects/clickescolar.png"
                    tags={["React", "Node.js", "MongoDB", "Stripe"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="right"
                    imageRotation="moderate"
                    imageScale="small"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- PROYECTO 6 - Dashboard Analytics -->
                <GlassCardProject
                    title={lang === "es"
                        ? "Dashboard Analytics"
                        : lang === "en"
                          ? "Analytics Dashboard"
                          : "Tableau de Bord Analytique"}
                    description={lang === "es"
                        ? "Panel de control con métricas en tiempo real, gráficos interactivos y reportes automatizados."
                        : lang === "en"
                          ? "Control panel with real-time metrics, interactive charts and automated reports."
                          : "Panneau de contrôle avec métriques en temps réel, graphiques interactifs et rapports automatisés."}
                    imageUrl="/images/mockups/dashboard.webp"
                    tags={["Vue.js", "D3.js", "Express", "PostgreSQL"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="right"
                    imageRotation="moderate"
                    imageScale="small"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- PROYECTO 7 - API REST -->
                <GlassCardProject
                    title={lang === "es"
                        ? "API REST"
                        : lang === "en"
                          ? "REST API"
                          : "API REST"}
                    description={lang === "es"
                        ? "Desarrollo de API RESTful con autenticación JWT, documentación Swagger y testing automatizado."
                        : lang === "en"
                          ? "RESTful API development with JWT authentication, Swagger documentation and automated testing."
                          : "Développement d'API RESTful avec authentification JWT, documentation Swagger et tests automatisés."}
                    imageUrl="/images/mockups/api.webp"
                    tags={["Python", "FastAPI", "JWT", "Docker"]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="left"
                    imageRotation="none"
                    imageScale="medium"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />

                <!-- PROYECTO 8 - Juego Web -->
                <GlassCardProject
                    title={lang === "es"
                        ? "Juego Web Interactivo"
                        : lang === "en"
                          ? "Interactive Web Game"
                          : "Jeu Web Interactif"}
                    description={lang === "es"
                        ? "Desarrollo de juego web interactivo con física realista, multijugador y efectos visuales."
                        : lang === "en"
                          ? "Interactive web game development with realistic physics, multiplayer and visual effects."
                          : "Développement de jeu web interactif avec physique réaliste, multijoueur et effets visuels."}
                    imageUrl="/images/mockups/game.webp"
                    tags={[
                        "JavaScript",
                        "Canvas API",
                        "WebSockets",
                        "Three.js",
                    ]}
                    imageGradient="from-blue-200 to-purple-300"
                    imagePosition="center"
                    imageRotation="slight-left"
                    imageScale="normal"
                    cardClass="min-h-[300px] sm:min-h-[400px] mx-auto w-full"
                />
            </div>

            <!-- Enlace a Galería 3D -->
            <div class="text-center mt-8 px-4 sm:px-0">
                <a
                    href={`/projects/3D-gallery?lang=${lang}`}
                    class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors duration-300 font-medium text-sm sm:text-base"
                >
                    {t.projects.gallery}
                </a>
            </div>
        </SectionContainerMain>
    </main>
</Layout>
